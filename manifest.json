{
  "manifest_version": 3,
  "name": "Sonnetate - AI powered sensemaking annotations",
  "version": "1.0",
  "description": "PKM inspired, AI fueled, annotations for the web",
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["sidePanel", "activeTab", "tabs"],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_title": "Open Sonnetate"
  },
  "host_permissions": ["https://*.anthropic.com/"]
}
